# -------------------------------
#   Topmost Editorconfig File
# -------------------------------

root = true

# -------------------------------




# -------------------------------
#   All Files
# -------------------------------

[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 2
insert_final_newline = true
trim_trailing_whitespace = true

# -------------------------------




# -------------------------------
#   Markdown Files
# -------------------------------

[*.md]
trim_trailing_whitespace = false
indent_size = 4

# -------------------------------




# -------------------------------
#   JSON Files
# -------------------------------

[*.json]
indent_style = tab
indent_size = 4

# -------------------------------
